@model IEnumerable<EpamPractice1.DAL.Entities.Article>

@{
    ViewBag.Title = "Form";
    @Styles.Render("~/Content/mainPage.css")
    IDictionary<int, string> articles = new Dictionary<int, string>();
}
@using EpamPractice1.Helpers
<main class="row">
    <section class="col-md-8">
        @foreach (var item in Model)
        {
            articles.Add(item.ArticleID, item.Name);
        }
        @using (Html.BeginForm())
        {

            <div class="form-horizontal">
                <h4>Form</h4>
                <div class="form-group">
                    @Html.Label("name", "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("name", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    Choose your gender:<br />
                    <label for="male">Male</label>
                    <input type="radio" name="gender" id="male" value="male"><br>
                    <label for="female">Female</label>
                    <input type="radio" name="gender" id="female" value="female">
                </div>

                <div class="form-group">
                    Choose your favorite articles<br />
                    @Html.CreateList(articles);
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send form" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }              
    </section>
    <section class="col-md-4">
        <ul class="main-menu">
            <li>@Html.ActionLink("Главная", "Index", "Articles")</li>
            <li>@Html.ActionLink("Гостевая", "Index", "Reviews")</li>
            <li><a href="#">Анкета</a></li>
        </ul>
        @Html.ActionLink("Выйти из аккаунта", "Logout", "Account")
    </section>
</main>
